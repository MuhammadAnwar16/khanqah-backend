# Production Environment Variables for Khanqah Backend
# Copy this file and rename to .env, then fill in actual values
# NEVER commit the actual .env file with real values to version control

# Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-generate-with-python-manage.py-shell--command-from-django-core-management-utils-get-random-secret-key
ALLOWED_HOSTS=your-backend.onrender.com,api.yourdomain.com

# Database (Neon PostgreSQL)
# Use DATABASE_URL from Neon connection string
DATABASE_URL=postgresql://user:password@host.neon.tech/dbname?sslmode=require

# For local development, you can use individual settings instead:
# DATABASE_NAME=khanqah_db
# DATABASE_USER=postgres
# DATABASE_PASSWORD=your_password
# DATABASE_HOST=localhost
# DATABASE_PORT=5432

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-frontend.vercel.app,https://www.yourdomain.com
CSRF_TRUSTED_ORIGINS=https://your-frontend.vercel.app,https://www.yourdomain.com
CORS_ALLOW_ALL_ORIGINS=False

# Cloudinary Media Storage
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Email Configuration (for contact form)
EMAIL_HOST=smtp.gmail.com
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com
CONTACT_RECIPIENT_EMAIL=contact@yourdomain.com

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_PRELOAD=True
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin

# Time Zone
TIME_ZONE=Asia/Karachi
LANGUAGE_CODE=en-us

# Optional: Redis Cache (if using Redis on Render)
# REDIS_URL=redis://your-redis-url

# Optional: Logging
# LOG_LEVEL=INFO

