## Django settings
SECRET_KEY=change-me
DEBUG=True

# Comma-separated, no spaces recommended (or keep empty in dev)
ALLOWED_HOSTS=localhost,127.0.0.1

## Database (PostgreSQL)
DATABASE_NAME=khanqah_db
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432

## CORS / CSRF (comma-separated, include scheme)
# Example: http://localhost:5173,http://127.0.0.1:5173
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

## Email (Contact form)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=you@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=you@gmail.com
CONTACT_RECIPIENT_EMAIL=you@gmail.com

## Internationalization
LANGUAGE_CODE=en-us
TIME_ZONE=Asia/Karachi

## Logging
DJANGO_LOG_LEVEL=INFO

## Security (Production only - set DEBUG=False)
# SECURE_SSL_REDIRECT=True

## X-Frame-Options (iframe embedding control)
# Options: 'DENY' (no embedding), 'SAMEORIGIN' (same origin only)
# Default: 'SAMEORIGIN'
# Note: If you get "Refused to display in a frame" error, it's because frontend/backend
# are on different ports. For API-only backend, this is normal and expected.
# If you need to embed backend pages in iframe during dev, you can temporarily
# comment out XFrameOptionsMiddleware in settings.py (NOT for production!)
# X_FRAME_OPTIONS=SAMEORIGIN

## Security Headers (Production)
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_PRELOAD=True
# SECURE_REFERRER_POLICY=strict-origin-when-cross-origin

## Content Security Policy (CSP) - Optional
# In development, frontend origins are automatically added to frame-ancestors
# In production, only 'self' is allowed for frame-ancestors
# CSP_DEFAULT_SRC='self'
# CSP_SCRIPT_SRC='self' 'unsafe-inline'
# CSP_STYLE_SRC='self' 'unsafe-inline'
# CSP_IMG_SRC='self' data: https:
# CSP_FRAME_SRC='self' https://www.youtube.com https://www.google.com
# CSP_FRAME_ANCESTORS='self'  # In dev, frontend origins are auto-added


